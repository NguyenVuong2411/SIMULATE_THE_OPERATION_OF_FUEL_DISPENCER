#include <DO AN NE.h>
#include <16F877A.h>

#use delay(crystal=20000000)
#define lcd_enable_pin  PIN_E2
#define lcd_rs_pin      PIN_E0      
#define lcd_rw_pin      PIN_E1
#define lcd_data4       PIN_D4
#define lcd_data5       PIN_D5
#define lcd_data6       PIN_D6
#define lcd_data7       PIN_D7
#include <lcd.c>
#INT_EXT


float LIT ;

void  EXT_isr(void) 
{  LIT = LIT + 2.25;
   while(TRUE)
   {
        lcd_gotoxy(1,1);
            lcd_putc("SO TIEN");
          lcd_gotoxy(1,2);
  printf(lcd_putc,"SO LIT: %0.2f", LIT);    
      //TODO: User Code
   }
}

void main()
{
   set_tris_B(0x0F);
   set_tris_D(0);
   set_tris_E(0);
   lcd_init();   
   enable_interrupts(INT_EXT);
   enable_interrupts(GLOBAL);
       
   while(TRUE)
   {
        lcd_gotoxy(1,1);
            lcd_putc("SO TIEN");
          lcd_gotoxy(1,2);
  printf(lcd_putc,"SO LIT: %0.2f", LIT);    
      //TODO: User Code
   }

}
